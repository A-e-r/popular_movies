<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"

    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_title_view"
            android:textSize="40sp"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:paddingEnd="15dp"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingStart="15dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/detail_poster_view"
                android:scaleType="fitStart"
                android:paddingTop="10dp"
                android:adjustViewBounds="true"
                android:paddingBottom="10dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_rating_view"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_gravity="start"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_release_text"
                    android:textSize="15sp"
                    android:layout_gravity="start"
                    />


            </LinearLayout>





        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_synopsis_view"
            android:paddingEnd="15dp"
            android:paddingStart="15dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/detail_placeholder"
            android:textSize="40sp"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="15dp"
            android:paddingEnd="15dp"
            android:textAlignment="center"
            android:text="@string/detail_placeholder"
            android:enabled="true"
            android:gravity="center_horizontal" />



    </LinearLayout>
</ScrollView>